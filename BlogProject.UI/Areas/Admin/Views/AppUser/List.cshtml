
@{
	ViewBag.Title = "List";
	Layout = "~/Areas/Admin/Views/Shared/_AdminLoyaut.cshtml";
}

@model List<BlogProject.Entity.Entities.AppUser>
<section class="content">
	<div class="row">
		<div class="col-sm-12">
			<div class="box box-danger">
				<div class="box-header">
					<h4>List of User</h4>
				</div>
				<div class="box-body">
					<table class="table table-hover">
						<thead>
							<tr>
								<th>Id</th>
								<th>User Name</th>
								<th>Password</th>
								<th>Role</th>
								<th>Status</th>
								<th>Image</th>
								<th></th>
							</tr>
						</thead>
						<tbody>
							@foreach (var item in Model)
							{
								<tr>
									<td>@item.Id</td>
									<td>@item.UserName</td>
									<td>@item.Password</td>
									<td>@item.Role</td>
									<td>@item.Status</td>
									<td><img src="@item.XSmallUserImage" /></td>
									<td>
										<a href="/Admin/AppUser/Update/@item.Id" class="btn btn-warning">Update</a> |
										<a href="/Admin/AppUser/Delete/@item.Id" class="btn btn-danger">Delete</a>
									</td>
								</tr>
							}
						</tbody>
					</table>
				</div>
				<div class="box-footer">
					<a href="/Admin/AppUser/Create" class="btn btn-block btn-primary">Back to List</a>
				</div>
			</div>
		</div>
	</div>
</section>

