
@{
    ViewBag.Title = "Update";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLoyaut.cshtml";
}
<!--Controller'da yazmış olduğumuz kodları mvc'ile birleştiriyoruz.Burada mvc'yi yani web kısımını düzenlemeler yapıyoruz.-->
@model BlogProject.UI.Areas.Admin.Data.DTO.AppUserDTO
	<section class="content">
		<div class="row">
			<div class="col-md-6">
				<div class="box box-danger">

					<div class="box-header">
						<h4>Update User</h4>
					</div>

					<div class="box-body">
						<form action="/Admin/AppUser/Update" method="post" role="form" enctype="multipart/form-data">
							<input type="text" style="visibility:hidden" name="Id" value="@Model.Id" />
							<div class="form-group">
								<label for="UserName">User Name:</label>
								<input type="text" name="UserName" value="@Model.UserName" class="form-control" placeholder="User Name" />
							</div>

							<div class="form-group">
								<label for="Password">Password:</label>
								<input type="password" name="Password" value="@Model.Password" class="form-control" placeholder="Password.." />
							</div>

							<div class="form-group">
								<label for="Role">Choose a role:</label>
								<select name="Role" value="@Model.Role" class="form-control">
									@foreach (var item in Enum.GetNames(typeof(BlogProject.Entity.Entities.Role)))
									{
										<option value="@item">@item</option>
									}
								</select>
							</div>
							<div class="form-group">
								<label for="Image">Choose a Picture:</label>
								<input type="file" value="@Model.XSmallUserImage" name="Image" class="form-control" />
							</div>
							<div class="form-group" style="float:right">
								<button type="submit" class="btn btn-primary">Submit</button>
							</div>
						</form>
					</div>
					<div class="box-footer">
						<a href="/Admin/AppUser/List" class="btn btn-warning btn-block">Back to List</a>
					</div>

				</div>
			</div>
		</div>
	</section>